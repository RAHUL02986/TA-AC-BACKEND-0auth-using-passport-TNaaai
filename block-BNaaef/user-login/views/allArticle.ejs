<!DOCTYPE html>
<html>
  <head>
    <title>All Article</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
  </head>
  <body class="bg-success-subtle">
    <header class="bg-info-subtle">
      <div
        class="d-flex justify-content-between py-3 align-items-baseline mx-5"
      >
        <h1 class="text-info">AltSpace</h1>
        <nav class="d-flex">
          <a class="mx-5" href="/register/logout"
            ><button class="btn btn-info">logout</button></a
          >
          <a href="/article/new"
            ><button class="btn btn-warning">Create Article</button></a
          >
        </nav>
      </div>
    </header>
    <main class="mt-5 mx-5">
      <div class="d-flex justify-content-between">
        <%articles.forEach(article=>{%>
        <div>
          <h2><%=article.title%></h2>
          <hr />
          <h2><%=article.descreption%></h2>
          <hr />
          <div>
            <a href="/article/<%=article._id%>/detail"
              ><button class="btn btn-info">Show</button></a
            >
          </div>
        </div>
        <% })%>
      </div>
    </main>
  </body>
</html>
